<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_tabItem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_title_tabItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_tabItem"
        android:layout_toRightOf="@+id/imageView_tabItem"
        android:text="PlaylistTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tv_nickname_tabItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_tabItem"
        android:text="nickname" />

    <TextView
        android:id="@+id/tv_tracks_tabItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_title_tabItem"
        android:layout_toEndOf="@+id/imageView_tabItem"
        android:layout_toLeftOf="@+id/toggle_mainPlaylist"
        android:layout_toRightOf="@+id/imageView_tabItem"
        android:layout_toStartOf="@+id/toggle_mainPlaylist"
        android:text="tracks" />

    <ToggleButton
        android:id="@+id/toggle_mainPlaylist"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/togglebutton_background"
        android:text=""
        android:textOff=""
        android:textOn="" />

</RelativeLayout>