<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hyunseok.android.sharemusicplaylist.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/et_toolbar"
            android:background="#00000000"/>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"
        android:layout_below="@+id/toolbar">
    </android.support.design.widget.TabLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabLayout">

        <ImageView
            android:id="@+id/imageView_playlist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/imageView_tracks"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/imageView_albums"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/imageView_TAG"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher" />
        <ImageButton
            android:id="@+id/imgbtn_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:background="#ffffffff" />
    </LinearLayout>

</RelativeLayout>
