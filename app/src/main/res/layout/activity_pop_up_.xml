<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.hyunseok.android.sharemusicplaylist.PopUp_Activity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTrackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtTrackArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/btnShowTrackInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="곡 정보" />
        <Button
            android:id="@+id/btnAddExistPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기존 플레이리스트에 추가" />

        <Button
            android:id="@+id/btnAddNewPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로운 플레이리스트에 추가" />

    </LinearLayout>
</RelativeLayout>
